doctype html
html
  head
    title Task Manager - #{title ? title : 'Home'}
    link(rel='stylesheet', href='/styles.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css')
  body
    header
      h1
        a.link-no-style(href='/') Task Manager
      nav
        ul
          li
            a(href='/') Home
          li
            a(href='/tasks/new') Add New Task
          li
            a(href='/projects/new') Add New Project
          li
            a(href='/tags/new') Add New Tag
    main
      block content
    footer
      p &copy; Task Manager. All rights reserved.
      script.
        const currentYear = new Date().getFullYear();
        document.querySelector('footer p').innerHTML = `&copy; ${currentYear} Task Manager. All rights reserved.`;

